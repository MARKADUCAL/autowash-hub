{
  "rootDirectory": "frontend",
  "buildCommand": "npm run build:ssr",
  "outputDirectory": "dist/autowash-hub",
  "framework": "angular",
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/dist/autowash-hub/browser/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
